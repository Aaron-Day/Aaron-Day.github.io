@page "/games"
@using AaronDay.Models;
@inject HttpClient Http

<PageTitle>Games</PageTitle>

<h1>Aaron's Games</h1>

@if(FilteredGames == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button @onclick="ToggleFilterDialog">Filters</button>
    @if(showFilterDialog)
    {
        <div class="filter-dialog">
            <h3>Filters:</h3>
            <!-- Add your filter fields here -->
            <p>
                <input @bind="NameFilter" @bind:event="oninput" placeholder="name" />
                <input @bind="AgeFilter" @bind:event="oninput" placeholder="age" />
                <input @bind="PlaytimeFilter" @bind:event="oninput" placeholder="time" />
                <input @bind="PlayersFilter" @bind:event="oninput" placeholder="players" />
            </p>
            <!-- Add tag filters for mechanics -->
            <h4>Mechanics:</h4>
            <!-- Add the toggle switch for "Any" or "All" filter mode -->
            <div class="filter-mode-toggle">
                <div class="toggle-container">
                    <span>Any</span>
                    <label class="switch">
                        <input type="checkbox" @bind="MatchAllMechanicsTags" />
                        <span class="slider round"></span>
                    </label>
                    <span>All</span>
                </div>
            </div>
            <div>
                @foreach(string mechanic in UniqueMechanics)
                {
                    <button class="chip @(MechanicsFilter.Contains(mechanic) ? "selected" : "")" @onclick="() => ToggleMechanicTag(mechanic)">@mechanic</button>
                }
            </div>

            <!-- Add tag filters for categories -->
            <h4>Categories:</h4>
            <!-- Add the toggle switch for "Any" or "All" filter mode -->
            <div class="filter-mode-toggle">
                <div class="toggle-container">
                    <span>Any</span>
                    <label class="switch">
                        <input type="checkbox" @bind="MatchAllCategoriesTags" />
                        <span class="slider round"></span>
                    </label>
                    <span>All</span>
                </div>
            </div>
            <div>
                @foreach(string category in UniqueCategories)
                {
                    <button class="chip @(CategoriesFilter.Contains(category) ? "selected" : "")" @onclick="() => ToggleCategoryTag(category)">@category</button>
                }
            </div>
            <button @onclick="ToggleFilterDialog">Close</button>
        </div>
    }
    <div class="body">
        <div class="game-grid">
            @foreach(Game game in FilteredGames)
            {
                <div class="game-card">
                    <div class="card z-depth-4">
                        <div class="card-header">
                            <span class="card-title">@game.Name</span><br />
                            <span class="card-subtitle">
                                <span class="card-subtitle-item" title="Number of players"><i class="material-icons">people</i><span>&nbsp;@game.Players</span></span>
                                <span class="card-subtitle-item" title="Approximate playtime"><i class="material-icons">timer</i><span>&nbsp;@game.Playtime</span></span>
                                <span class="card-subtitle-item" title="Minimum age"><i class="material-icons">family_restroom</i><span>&nbsp;@game.MinAge+</span></span>
                            </span>
                        </div>
                        <div class="card-image">
                            <a href="@game.AtlasUrl"><img src="@game.ImageUrl" alt="@game.Name"></a>
                        </div>
                        <div class="card-content">
                            <div class="row">
                                <div class="col s12">
                                    <span style="font-weight: bold;">Description:</span><br />
                                    <p class="line-clamp-4" style="@(game.Expanded ? "max-height: none;" : "")">
                                        @if(game.Description is not null)
                                        {
                                            @((MarkupString)game.Description)
                                        }
                                    </p>
                                </div>
                                <a href="javascript:void(0)" @onclick="() => ToggleDescriptionExpansion(game)">@game.ExpandedText</a>
                            </div>
                            <div class="row">
                                @if(game.Mechanics is not null && game.Mechanics.Count > 0)
                                {
                                    <h4>Mechanics:</h4>
                                    <div style="width: 95%; margin: auto;">
                                        @foreach(string m in game.Mechanics)
                                        {
                                            <div class="chip">@m</div>
                                        }
                                    </div>
                                }
                                @if(game.Categories is not null && game.Categories.Count > 0)
                                {
                                    <h4>Categories:</h4>
                                    <div style="width: 95%; margin: auto;">
                                        @foreach(string c in game.Categories)
                                        {
                                            <div class="chip">@c</div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
